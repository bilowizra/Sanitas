<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.patient_profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="360dp"
                            android:background="@drawable/top_background"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <Button
                                android:id="@+id/editProfileButton"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_marginTop="223dp"
                                android:text="EDIT PROFILE"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:src="@drawable/profile"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="N/A"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/imageView"
                            app:layout_constraintStart_toStartOf="@+id/imageView"
                            app:layout_constraintTop_toBottomOf="@+id/imageView" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="@+id/nameTextView"
                            app:layout_constraintStart_toStartOf="@+id/nameTextView"
                            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/circles"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/white_background"
                            android:elevation="3dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView4">

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/birthdateTextViwe"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="Birth Date: "
                                            android:textSize="15sp" />

                                        <EditText
                                            android:id="@+id/birthdateValueTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="48dp"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:inputType="date"
                                            android:text="N/A"
                                            android:textSize="15sp" />


                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/ageTextView"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="Age:"
                                            android:textSize="15sp" />

                                        <EditText
                                            android:id="@+id/ageValueTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="48dp"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:inputType="number"
                                            android:text="N/A"
                                            android:textSize="15sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/genderTextView"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="Gender:"
                                            android:textSize="15sp" />

                                        <Spinner
                                            android:id="@+id/genderValueTextView"
                                            android:layout_width="35dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:entries="@array/genders"
                                            android:text="N/A"
                                            android:textSize="15sp"
                                            tools:ignore="SpeakableTextPresentCheck" />




                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/weightTextView"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="Weight:"
                                            android:textSize="15sp" />

                                        <EditText
                                            android:id="@+id/weightValueTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:inputType="number"
                                            android:text="N/A"
                                            android:textSize="15sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/heightTextView"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="Height:"
                                            android:textSize="15sp" />

                                        <EditText
                                            android:id="@+id/heightValueTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:inputType="number"
                                            android:text="N/A"
                                            android:textSize="15sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/bmiTextView"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="BMI:"
                                            android:textSize="15sp" />

                                        <TextView
                                            android:id="@+id/bmiValueTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:text="N/A"
                                            android:textSize="15sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/bloodTypeTextView"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="Blood Type:"
                                            android:textSize="15sp" />

                                        <Spinner
                                            android:id="@+id/bloodTypeValueTextView"
                                            android:layout_width="35dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:entries="@array/bloodtypes"
                                            android:text="N/A"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/allergiesTextView"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="Allergies:"
                                            android:textSize="15sp" />

                                        <EditText
                                            android:id="@+id/allergiesValueTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="top"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:text="N/A"
                                            android:textSize="15sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/languageTextView"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="Language:"
                                            android:textSize="15sp" />

                                        <EditText
                                            android:id="@+id/languageValueTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:text="N/A"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/phoneTextView"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:text="Phone Number:"
                                            android:textSize="15sp" />

                                        <EditText
                                            android:id="@+id/phoneValueTextView6"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:inputType="number"
                                            android:text="N/A"
                                            android:textSize="15sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="335dp"
                                        android:layout_height="1dp"
                                        android:background="#000000"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tcTextView5"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="false"
                                            android:text="TC-ID:"
                                            android:textSize="15sp" />

                                        <TextView
                                            android:id="@+id/tcValueTextView6"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_weight="1"
                                            android:editable="true"
                                            android:text="N/A"
                                            android:textSize="15sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>